@model MVC_2.Models.PersonModel
 
<div class="row">
    <input type="hidden" asp-for="id" />
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="firstName" class="control-label"></label>
            <input type="text" asp-for="firstName" class="form-control" />
            <span asp-validation-for="firstName" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="lastName" class="control-label"></label>
            <input type="text" asp-for="lastName" class="form-control" />
            <span asp-validation-for="lastName" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="dateOfBirth" class="control-label"></label>
            <input type="date" asp-for="dateOfBirth" class="form-control" />
            <span asp-validation-for="dateOfBirth" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="gender" class="control-label"></label>
            <input type="text" asp-for="gender" class="form-control" />
            <span asp-validation-for="gender" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="phoneNumber" class="control-label"></label>
            <input type="tele" asp-for="phoneNumber" class="form-control" />
            <span asp-validation-for="phoneNumber" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="birthPlace" class="control-label"></label>
            <input type="text" asp-for="birthPlace" class="form-control" />
            <span asp-validation-for="birthPlace" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="age" class="control-label"></label>
            <input type="number" asp-for="age" class="form-control" />
            <span asp-validation-for="age" class="text-danger small"></span>
        </div>
        <div class="form-group">
            <label asp-for="isGraduated" for=""></label>
            <select asp-for="isGraduated"  class="form-control" id="">
                <option asp-for="isGraduated"  value= true >Đã tốt nghiệp</option>
                <option  asp-for="isGraduated" value= false >Chưa tốt nghiệp</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="email" for=""></label>
            <input type="email" class="form-control"placeholder="Enter email" asp-for="email">
        </div>
        
    </div>
    
</div>

        


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}